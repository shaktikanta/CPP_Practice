{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug obj/main (WSL)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/obj/main",  // Change 'main' to match the file you want to debug
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
  ]
}